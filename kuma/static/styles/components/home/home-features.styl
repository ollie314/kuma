/* List of four feature columns within the masthead */
.home-features {
    &, a {
        color: $blue-background-text-color !important;
    }

    a {
        text-decoration: underline;
        outline-color: $blue-background-text-color;
    }

    h3 {
        display: flex;
        flex-direction: row;
        align-items: center
        set-larger-font-size();
        font-weight: bold;
        font-family: 'Open Sans Extra Bold', sans-serif;
        text-transform: uppercase;
        clearfix();

        {$selector-icon} {
            width: 42px;
            height: 39px;
            background-position: 0 -147px;
            background-size: 134px auto;
            color: #0095dd;
            bidi-value(float, left, right);
            bidi-value(margin-right, $icon-margin, 0);
            bidi-value(margin-left, 0, $icon-margin);

            &:before {
                margin: 11px 0 0 0;
                display: block;
                text-align: center;
            }
        }

        span {
            bidi-value(float, left, right);
        }
    }

    li {
        padding: 4px 0;
    }
}

.column-home-features {
    @extend $column-third;
}


@media $media-query-mobile {

    .column-home-features {
        width: auto !important;
        float: none;
        margin-bottom: $grid-spacing;
    }

    .column-home-features {
        li {
            display: inline-block;
            bidi-style(padding-right, $grid-spacing, padding-left, 0);
        }
    }
}
